<div class="account-pg">
  <div class="nav-menu">
    <div>
      <%= link_to "<span class='material-symbols-outlined'>arrow_back</span>".html_safe, group_path(@group), class: "back-btn"%>
    </div>

    <h2>ADD NEW ENTITY</h2>
    <span></span>
  </div>
  
  <div class="field-wrapper-cat">
  <%= form_with model: @entity, class: "form-two", url: group_entities_path(@group) do |form| %>
    <div class="field">
      <%= form.text_field :name, placeholder: "Name", class: "form-control" %>
    </div>

    <div class="field">
      <%= form.number_field :amount, min: 0, placeholder: "Amount", class: "form-control" %>
    </div>

    <div class="field-three">
      <%= form.label :group_ids,
                 "Select categories this entity belongs to: ",
                 class: "form-label" %>
      <%= select_tag "entity[group_ids][]",
        options_from_collection_for_select(@groups, :id, :name, selected: @group.id),
        { multiple: true, 
          class: "form-control [&>*]:p-2", 
          size: @groups.count } 
      %>
    </div>

    <div class="sub">
      <%= form.submit class: "sub-btn" %>
    </div>
  <% end %>
  </div>

</div>